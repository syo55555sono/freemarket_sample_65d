.addresspage
  =render "signup/header"

  .signup__address
    .signup__address__title
      住所入力
    
    = form_with model: @user, local: true, url: step6_signup_index_path, class: 'signup__address__box', method: 'GET' do |f|
      .signup__address__box__input

        .field          
          = f.label 'お名前', class: 'field__info'
          %span.field__require 必須
          = f.text_field :family_name, autocomplete: "l_name_kanji", placeholder: '例) 山田', class: "input-default" 
          = f.text_field :first_name, autocomplete: "f_name_kanji", placeholder: '例) 彩', class: "input-default"
          
        .field
          = f.label 'お名前カナ', class: 'field__info'
          %span.field__require 必須
          = f.text_field :family_name_kana, autocomplete: "l_name_kana", placeholder: '例) ヤマダ', class: "input-default" 
          = f.text_field :first_name_kana, autocomplete: "f_name_kana", placeholder: '例) アヤ', class: "input-default"
      
        .field
          = f.label '郵便番号', class: 'field__info'
          %span.field__require 必須
          = f.text_field :postal_code, autocomplete: "postal_code", placeholder: '例) 123-4567', class: "input-default"
        
        .field
          = f.label '都道府県', class:'field__info'
          %span.field__require 必須            
          = f.collection_select :prefecture_id, Prefecture.all, :id, :name, {include_blank: '未選択'},{class: "category"}
        
        .field
          = f.label '市区町村', class: 'field__info'
          %span.field__require 必須            
          = f.text_field :city, autocomplete: "city", placeholder: "名古屋市中区", class: "input-default"
        
        .field
          = f.label '番地', class: 'field__info'
          %span.field__require 必須            
          = f.text_field :block, autocomplete: "block", placeholder: '例) 青山1-1-1', class: "input-default"
        
        .field
          = f.label '建物名', class: 'field__info'
          %span.field__any 任意           
          = f.text_field :building, autocomplete: "building", placeholder: '例) 柳ビル103', class: "input-default"
        
        .field
          = f.label '電話', class:'field__info'
          %span.field__any 任意
          = f.text_field :building_tel, autocomplete: "building_tel", placeholder: '例) 052-111-1111', class: "input-default"
      
        = f.submit '次へ進む', class:"signup__address__box__input__submit"
          

  =render "signup/footer"